<!DOCTYPE html>
<html>
  <head>
    <title>Register Form</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>
    <style>
        body {
          margin: 0;
          font-family: Arial, Helvetica, sans-serif;
        }
        
        .topnav {
          overflow: hidden;
          background-color: rgb(70, 82, 82);
        }
        
        .topnav a {
          float: left;
          color: #f2f2f2;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
          font-size: 17px;
        }
        
        .topnav a:hover {
          background-color: #ddd;
          color: black;
        }
        
        .topnav a.active {
          background-color: #030605;
          color: white;
        }
      </style>
  </head>
  <body>
      <div class="topnav">
        <a id="homepage" href="/">Home</a>
        <a id="cart" href="/cartpage">Cart</a>
        <a id="orders" href="/myorder">My Orders</a>
        <div>
          <a id="register" href="/register">Sign up</a>
          <a id="login" href="/login">Login</a>
        </div>
      </div>
    <div style="padding-left:16px">

    <h2>Please Register here</h2>
    <hr>
    <form>
      <label>Your Username</label>
      <input type="text" id="name" />
      <br /><br />

      <label>Your Email</label>
      <input type="text" id="email" />
      <br /><br />

      <label>Your Password</label>
      <input type="password" id="password" />
      <br /><br />

      <input type="Button" id="btn2" value="Register" />
      <br /><br />
    </form>

    <script>
      const host = "http://localhost:3000";
      $('#btn2').on('click', function () {
      $.ajax({
        url: `${host}/register`,
        type: "POST",
        data: JSON.stringify({
          name:$('#name').val(),
          email: $('#email').val(),
          password: $('#password').val()
        }),
        contentType: "application/json; charset=utf-8",
        success: function (res) {
          alert("Registered successfully! ");
          window.location = 'login'
        },
        error: function(e) {
                alert("error!");
                window.location.reload();
            }
      });
    });
    </script>
  </body>
</html>
