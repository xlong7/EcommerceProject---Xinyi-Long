<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admin</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        body {
          margin: 0;
          font-family: Arial, Helvetica, sans-serif;
        }
        
        .topnav {
          overflow: hidden;
          background-color: rgb(70, 82, 82);
        }
        
        .topnav a {
          float: left;
          color: #f2f2f2;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
          font-size: 17px;
        }
        
        .topnav a:hover {
          background-color: #ddd;
          color: black;
        }
        
        .topnav a.active {
          background-color: #030605;
          color: white;
        }
        .brand1{
          display:none
        }
        .brand2{
          display:none
        }
      </style>
  </head>
  <body>
        
    <div class="topnav">
        <a id="checkReq" href="/homepage">Checkout Requests</a>
        <a id="userOrder" href="/order_history">User Order History</a>
        {{#if loggedIn}}
          <a id="logout" href="/homepage" onclick=clearCookies() >Logout</a>
        {{else}}
          <a id="register" href="/register">Sign up</a>
          <a id="login" href="/login">Login</a>
        {{/if}}
    </div>
    <div style="padding-left:16px">
    </div>
   
        {{#each order_history}}
            <ul>
            <h4>{{@key}}</h4>
            {{#if haveOrders}}
                {{#each this}}
                    <li>Shipping Address: {{shipping}}</li>
                    <li>Billing Address: {{billing}}</li>
                    <li>Order ID: {{order_id}}</li>
                    <li>Purchase Time: {{time}}</li>
                    <hr>
                {{/each}}
            {{else}}
                <li>No avaliable order for this user</li>
            {{/if}}
                </ul>
            {{!-- {{else}}
                <li>No orders avaliable</li>
            {{/if}} --}}
        {{/each}}
        
    
{{!-- Logout section --}}
    <script>
      function clearCookies(){
        document.cookie.split(";").forEach(function(c) { document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/"); });
      }
    </script>
</body>
</html>